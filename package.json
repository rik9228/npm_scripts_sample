{
  "name": "npm_scripts_sample",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "config": {
    "url": "https://test.local"
  },
  "scripts": {
    "clean": "del-cli dist/",
    "pug": "pug -P --out dist --basedir src --pretty src/*.pug",
    "pug:w": "onchange 'src/**/*.pug' -- yarn run pug",
    "scss:dev": "sass src/assets/scss/style.scss dist/css/style.css",
    "scss:prod": "sass src/assets/scss/style.scss dist/css/style.css --no-source-map",
    "scss:w": "sass src/assets/scss/style.scss dist/css/style.css -w",
    "postcss": "postcss --use autoprefixer -o dist/css/style.css dist/css/style.css",
    "postcss:w": "postcss --use autoprefixer -o dist/css/style.css dist/css/style.css -w",
    "cleancss": "cleancss -o dist/css/style.css dist/css/style.css",
    "cleancss:w": "cleancss -o dist/css/style.css dist/css/style.css",
    "img:jpg": "squoosh-cli --mozjpeg '{quality:70}' src/assets/img/*.jpg -d dist/img",
    "img:png": "squoosh-cli --oxipng '{quality:70}' src/assets/img/*.png -d dist/img",
    "img:webp": "squoosh-cli --webp '{quality:70}' src/assets/img/** -d dist/img",
    "img": "npm-run-all -p img:jpg img:png img:webp",
    "server": "browser-sync start --server --no-open --https true --config bs-config.js",
    "webpack:w": "cross-env NODE_ENV=development webpack -w",
    "webpack:prod": "cross-env NODE_ENV=production webpack",
    "dev": "npm-run-all -p clean scss:dev scss:w postcss postcss:w pug pug:w webpack:w server",
    "build": "npm-run-all -s clean scss:prod postcss cleancss pug img webpack:prod pug"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@squoosh/cli": "^0.7.2",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "browser-sync": "^2.27.9",
    "clean-css-cli": "^5.5.2",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-sorting": "^7.0.1",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "volta": {
    "node": "14.19.1"
  }
}
